<UserControl x:Class="GoodManagement.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             Background="Transparent">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Welcome Header -->
        <materialDesign:Card Grid.Row="0" Margin="0,0,0,25" 
                            materialDesign:ElevationAssist.Elevation="Dp3"
                            Background="{DynamicResource PrimaryHueMidBrush}">
            <Grid Margin="30,25">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <materialDesign:PackIcon Kind="ViewDashboard" 
                                        Width="60" Height="60"
                                        VerticalAlignment="Center"
                                        Foreground="White"/>
                <StackPanel Grid.Column="1" Margin="20,0,0,0" VerticalAlignment="Center">
                    <TextBlock Text="DASHBOARD TỔNG QUAN" 
                              FontSize="28" 
                              FontWeight="Bold"
                              Foreground="White"/>
                    <TextBlock FontSize="16" 
                              Foreground="White"
                              Opacity="0.9" 
                              Margin="0,8,0,0">
                        <Run Text="Xin chào,"/>
                        <Run Text="{Binding CurrentUser.Username}" FontWeight="SemiBold"/>
                        <Run Text="!"/>
                    </TextBlock>
                    <TextBlock Text="{Binding CurrentTime, StringFormat='Hôm nay: {0:dd/MM/yyyy - HH:mm}'}" 
                              FontSize="14" 
                              Foreground="White"
                              Opacity="0.8"
                              Margin="0,5,0,0"/>
                </StackPanel>
            </Grid>
        </materialDesign:Card>

        <!-- Statistics Cards -->
        <Grid Grid.Row="1" Margin="0,0,0,25">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Total Products -->
            <materialDesign:Card Grid.Column="0" 
                                Margin="0,0,12,0"
                                materialDesign:ElevationAssist.Elevation="Dp3">
                <Grid Margin="25,20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <materialDesign:PackIcon Grid.Row="0"
                                            Kind="Package" 
                                            Width="45" Height="45"
                                            Foreground="#1976D2"
                                            HorizontalAlignment="Left"/>
                    
                    <TextBlock Grid.Row="1"
                              Text="Tổng sản phẩm" 
                              FontSize="14" 
                              Foreground="#424242"
                              Opacity="0.8"
                              Margin="0,15,0,5"/>
                    
                    <TextBlock Grid.Row="2"
                              Text="{Binding TotalProducts}" 
                              FontSize="36" 
                              FontWeight="Bold"
                              Foreground="#1976D2"/>
                </Grid>
            </materialDesign:Card>

            <!-- Total Inventory Items -->
            <materialDesign:Card Grid.Column="1" 
                                Margin="0,0,12,0"
                                materialDesign:ElevationAssist.Elevation="Dp3">
                <Grid Margin="25,20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <materialDesign:PackIcon Grid.Row="0"
                                            Kind="Warehouse" 
                                            Width="45" Height="45"
                                            Foreground="#2E7D32"
                                            HorizontalAlignment="Left"/>
                    
                    <TextBlock Grid.Row="1"
                              Text="Tổng số lượng tồn" 
                              FontSize="14" 
                              Foreground="#424242"
                              Opacity="0.8"
                              Margin="0,15,0,5"/>
                    
                    <TextBlock Grid.Row="2"
                              Text="{Binding TotalInventoryQuantity}" 
                              FontSize="36" 
                              FontWeight="Bold"
                              Foreground="#388E3C"/>
                </Grid>
            </materialDesign:Card>

            <!-- Low Stock Alert -->
            <materialDesign:Card Grid.Column="2" 
                                Margin="0,0,12,0"
                                materialDesign:ElevationAssist.Elevation="Dp3">
                <Grid Margin="25,20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <materialDesign:PackIcon Grid.Row="0"
                                            Kind="AlertCircle" 
                                            Width="45" Height="45"
                                            Foreground="#F57C00"
                                            HorizontalAlignment="Left"/>
                    
                    <TextBlock Grid.Row="1"
                              Text="Cảnh báo tồn thấp" 
                              FontSize="14" 
                              Foreground="#424242"
                              Opacity="0.8"
                              Margin="0,15,0,5"/>
                    
                    <TextBlock Grid.Row="2"
                              Text="{Binding LowStockCount}" 
                              FontSize="36" 
                              FontWeight="Bold"
                              Foreground="#F57C00"/>
                </Grid>
            </materialDesign:Card>

            <!-- Today's Activity -->
            <materialDesign:Card Grid.Column="3" 
                                materialDesign:ElevationAssist.Elevation="Dp3">
                <Grid Margin="25,20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <materialDesign:PackIcon Grid.Row="0"
                                            Kind="CalendarToday" 
                                            Width="45" Height="45"
                                            Foreground="#7B1FA2"
                                            HorizontalAlignment="Left"/>
                    
                    <TextBlock Grid.Row="1"
                              Text="Giao dịch hôm nay" 
                              FontSize="14" 
                              Foreground="#424242"
                              Opacity="0.8"
                              Margin="0,15,0,5"/>
                    
                    <TextBlock Grid.Row="2"
                              Text="{Binding TodayTransactions}" 
                              FontSize="36" 
                              FontWeight="Bold"
                              Foreground="#7B1FA2"/>
                </Grid>
            </materialDesign:Card>
        </Grid>

        <!-- Recent Activity and Quick Actions -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="15"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Low Stock Items -->
            <materialDesign:Card Grid.Column="0" 
                                materialDesign:ElevationAssist.Elevation="Dp2">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" 
                           Background="#FFF3E0"
                           Padding="20,15">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="AlertCircle" 
                                                    Width="24" Height="24"
                                                    VerticalAlignment="Center"
                                                    Foreground="#F57C00"
                                                    Margin="0,0,10,0"/>
                            <TextBlock Text="SẢN PHẨM TỒN KHO THẤP" 
                                      FontSize="16" 
                                      FontWeight="SemiBold"
                                      Foreground="#E65100"
                                      VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <ListView Grid.Row="1"
                             ItemsSource="{Binding LowStockItems}"
                             BorderThickness="0"
                             Margin="0">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="{DynamicResource MaterialDesignDivider}"
                                       BorderThickness="0,0,0,1"
                                       Padding="15,12">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="{Binding Product.ProductName}" 
                                                      FontWeight="SemiBold"
                                                      FontSize="14"
                                                      Foreground="#212121"/>
                                            <TextBlock FontSize="12" 
                                                      Foreground="#616161"
                                                      Opacity="0.9"
                                                      Margin="0,3,0,0">
                                                <Run Text="Mã:"/>
                                                <Run Text="{Binding ProductId}" FontWeight="SemiBold"/>
                                                <Run Text=" - "/>
                                                <Run Text="{Binding Product.Packaging}"/>
                                            </TextBlock>
                                        </StackPanel>

                                        <StackPanel Grid.Column="1" 
                                                   HorizontalAlignment="Right"
                                                   VerticalAlignment="Center">
                                            <TextBlock FontSize="13" 
                                                      Opacity="0.7"
                                                      HorizontalAlignment="Right">
                                                <Run Text="Tồn:"/>
                                                <Run Text="{Binding StockQuantity}" 
                                                     FontWeight="Bold"
                                                     Foreground="#F57C00"/>
                                            </TextBlock>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </materialDesign:Card>

            <!-- Quick Actions -->
            <materialDesign:Card Grid.Column="2" 
                                materialDesign:ElevationAssist.Elevation="Dp2">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" 
                           Background="{DynamicResource PrimaryHueLightBrush}"
                           Padding="20,15">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="FlashAuto" 
                                                    Width="24" Height="24"
                                                    VerticalAlignment="Center"
                                                    Foreground="White"
                                                    Margin="0,0,10,0"/>
                            <TextBlock Text="THAO TÁC NHANH" 
                                      FontSize="16" 
                                      FontWeight="SemiBold"
                                      Foreground="White"
                                      VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <StackPanel Grid.Row="1" Margin="20">
                        <!-- Add Product -->
                        <Button Command="{Binding NavigateToAddProductCommand}"
                               Style="{StaticResource MaterialDesignRaisedButton}"
                               Height="50"
                               HorizontalContentAlignment="Left"
                               Padding="20,0">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="PackageVariantAdd" 
                                                        Width="24" Height="24"
                                                        VerticalAlignment="Center"
                                                        Margin="0,0,15,0"/>
                                <TextBlock Text="Thêm sản phẩm" 
                                          VerticalAlignment="Center"
                                          FontWeight="SemiBold"/>
                            </StackPanel>
                        </Button>

                        <!-- Inbound -->
                        <Button Command="{Binding NavigateToInboundCommand}"
                               Style="{StaticResource MaterialDesignOutlinedButton}"
                               Height="50"
                               HorizontalContentAlignment="Left"
                               Padding="20,0"
                               Margin="0,10,0,0">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="TruckDelivery" 
                                                        Width="24" Height="24"
                                                        VerticalAlignment="Center"
                                                        Foreground="#2E7D32"
                                                        Margin="0,0,15,0"/>
                                <TextBlock Text="Nhập hàng" 
                                          VerticalAlignment="Center"
                                          FontWeight="SemiBold"
                                          Foreground="#2E7D32"/>
                            </StackPanel>
                        </Button>

                        <!-- Outbound -->
                        <Button Command="{Binding NavigateToOutboundCommand}"
                               Style="{StaticResource MaterialDesignOutlinedButton}"
                               Height="50"
                               HorizontalContentAlignment="Left"
                               Padding="20,0"
                               Margin="0,10,0,0">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="TruckFast" 
                                                        Width="24" Height="24"
                                                        VerticalAlignment="Center"
                                                        Foreground="#D32F2F"
                                                        Margin="0,0,15,0"/>
                                <TextBlock Text="Xuất hàng" 
                                          VerticalAlignment="Center"
                                          FontWeight="SemiBold"
                                          Foreground="#D32F2F"/>
                            </StackPanel>
                        </Button>

                        <!-- Inventory -->
                        <Button Command="{Binding NavigateToInventoryCommand}"
                               Style="{StaticResource MaterialDesignOutlinedButton}"
                               Height="50"
                               HorizontalContentAlignment="Left"
                               Padding="20,0"
                               Margin="0,10,0,0">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Warehouse" 
                                                        Width="24" Height="24"
                                                        VerticalAlignment="Center"
                                                        Foreground="#1976D2"
                                                        Margin="0,0,15,0"/>
                                <TextBlock Text="Xem tồn kho" 
                                          VerticalAlignment="Center"
                                          FontWeight="SemiBold"
                                          Foreground="#1976D2"/>
                            </StackPanel>
                        </Button>

                        <!-- Reports -->
                        <Button Command="{Binding NavigateToReportsCommand}"
                               Style="{StaticResource MaterialDesignOutlinedButton}"
                               Height="50"
                               HorizontalContentAlignment="Left"
                               Padding="20,0"
                               Margin="0,10,0,0">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="ChartBox" 
                                                        Width="24" Height="24"
                                                        VerticalAlignment="Center"
                                                        Foreground="#7B1FA2"
                                                        Margin="0,0,15,0"/>
                                <TextBlock Text="Báo cáo" 
                                          VerticalAlignment="Center"
                                          FontWeight="SemiBold"
                                          Foreground="#7B1FA2"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </materialDesign:Card>
        </Grid>
    </Grid>
</UserControl>
