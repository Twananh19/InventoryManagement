<Window x:Class="GoodManagement.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:helpers="clr-namespace:GoodManagement.Helpers"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        Title="Đăng nhập - Quản lý Hàng hóa" 
        Height="550" 
        Width="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True">

    <Window.Resources>
        <Style x:Key="LoginTextBox" TargetType="TextBox" BasedOn="{StaticResource MaterialDesignFloatingHintTextBox}">
            <Setter Property="Margin" Value="0,15,0,0"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        <Style x:Key="LoginPasswordBox" TargetType="PasswordBox" BasedOn="{StaticResource MaterialDesignFloatingHintPasswordBox}">
            <Setter Property="Margin" Value="0,15,0,0"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
    </Window.Resources>

    <materialDesign:Card UniformCornerRadius="15">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <materialDesign:ColorZone Mode="PrimaryMid" Padding="20" Grid.Row="0">
                <StackPanel>
                    <TextBlock Text="🏪 QUẢN LÝ HÀNG HÓA" 
                               Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                               HorizontalAlignment="Center"
                               FontWeight="Bold"
                               Foreground="White"/>
                    <TextBlock Text="Hệ thống quản lý tồn kho và nhập xuất" 
                               HorizontalAlignment="Center"
                               Foreground="White"
                               Opacity="0.8"
                               Margin="0,5,0,0"/>
                </StackPanel>
            </materialDesign:ColorZone>

            <!-- Login Form -->
            <StackPanel Grid.Row="1" Margin="50,30,50,50" VerticalAlignment="Center">
                <materialDesign:PackIcon Kind="AccountCircle" 
                                        Width="80" 
                                        Height="80"
                                        HorizontalAlignment="Center"
                                        Foreground="{DynamicResource PrimaryHueMidBrush}"/>

                <TextBlock Text="Đăng nhập hệ thống" 
                          Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                          HorizontalAlignment="Center"
                          Margin="0,20,0,30"
                          Foreground="{DynamicResource PrimaryHueMidBrush}"/>

                <!-- Username -->
                <TextBox materialDesign:HintAssist.Hint="Tên đăng nhập"
                        materialDesign:HintAssist.HelperText="Nhập tên đăng nhập của bạn"
                        Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                        Style="{StaticResource LoginTextBox}"/>

                <!-- Password -->
                <PasswordBox materialDesign:HintAssist.Hint="Mật khẩu"
                            materialDesign:HintAssist.HelperText="Nhập mật khẩu của bạn"
                            helpers:PasswordBoxHelper.BindPassword="True"
                            helpers:PasswordBoxHelper.BoundPassword="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            Style="{StaticResource LoginPasswordBox}"/>

                <!-- Remember me checkbox -->
                <CheckBox Content="Ghi nhớ đăng nhập" 
                         Margin="0,20,0,0"
                         Style="{StaticResource MaterialDesignCheckBox}"/>

                <!-- Login Button -->
                <Button Content="ĐĂNG NHẬP"
                       Command="{Binding LoginCommand}"
                       Style="{StaticResource MaterialDesignRaisedButton}"
                       Margin="0,30,0,0"
                       Height="45"
                       FontSize="15"
                       FontWeight="Bold"/>

                <!-- Info -->
                <StackPanel Orientation="Horizontal" 
                           HorizontalAlignment="Center" 
                           Margin="0,20,0,0">
                    <materialDesign:PackIcon Kind="InformationOutline" 
                                           VerticalAlignment="Center"
                                           Margin="0,0,5,0"/>
                    <TextBlock Text="Tài khoản mặc định: admin / admin123" 
                              FontSize="11"
                              Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                </StackPanel>
            </StackPanel>

            <!-- Close Button -->
            <Button Style="{StaticResource MaterialDesignIconButton}"
                   ToolTip="Đóng"
                   Click="CloseButton_Click"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Top"
                   Margin="0,5,5,0"
                   Grid.Row="0">
                <materialDesign:PackIcon Kind="Close" Foreground="White"/>
            </Button>
        </Grid>
    </materialDesign:Card>
</Window>
