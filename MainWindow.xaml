<Window x:Class="GoodManagement.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        Title="Quản lý Hàng hóa" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <!-- Dashboard View -->
        <DataTemplate x:Key="DashboardView">
            <Grid>
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <materialDesign:PackIcon Kind="ViewDashboard" Width="80" Height="80" 
                                            Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                    <TextBlock Text="Chào mừng đến với hệ thống!" FontSize="24" 
                              HorizontalAlignment="Center" Margin="0,20,0,0"/>
                    <TextBlock Text="{Binding CurrentUser.Username, StringFormat='Xin chào, {0}!'}" 
                              FontSize="16" HorizontalAlignment="Center" Margin="0,10,0,0"
                              Foreground="{DynamicResource SecondaryHueMidBrush}"/>
                </StackPanel>
            </Grid>
        </DataTemplate>

        <!-- Products View -->
        <DataTemplate x:Key="ProductsView">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <materialDesign:Card Grid.Row="0" Margin="0,0,0,10">
                    <StackPanel Margin="20">
                        <TextBlock Text="QUẢN LÝ HÀNG HÓA" FontSize="24" FontWeight="Bold"/>
                        <TextBlock Text="Thêm, sửa, xóa và tìm kiếm sản phẩm" FontSize="14" Opacity="0.7" Margin="0,5,0,0"/>
                    </StackPanel>
                </materialDesign:Card>

                <!-- DataGrid -->
                <materialDesign:Card Grid.Row="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Search & Actions -->
                        <Grid Grid.Row="0" Margin="20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBox Grid.Column="0" 
                                    materialDesign:HintAssist.Hint="Tìm kiếm sản phẩm..."
                                    Text="{Binding ProductViewModel.SearchText, UpdateSourceTrigger=PropertyChanged}"
                                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                    Margin="0,0,10,0"/>

                            <Button Grid.Column="1" 
                                   Content="THÊM SẢN PHẨM"
                                   Command="{Binding ProductViewModel.AddProductCommand}"
                                   Style="{StaticResource MaterialDesignRaisedButton}"
                                   materialDesign:ButtonAssist.CornerRadius="5"/>
                        </Grid>

                        <!-- Products List -->
                        <DataGrid Grid.Row="1" 
                                 ItemsSource="{Binding ProductViewModel.FilteredProducts}"
                                 SelectedItem="{Binding ProductViewModel.SelectedProduct}"
                                 AutoGenerateColumns="False"
                                 CanUserAddRows="False"
                                 Margin="20,0,20,20">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Mã SP" Binding="{Binding ProductId}" Width="80" IsReadOnly="True"/>
                                <DataGridTextColumn Header="Tên sản phẩm" Binding="{Binding ProductName}" Width="*"/>
                                <DataGridTextColumn Header="Quy cách" Binding="{Binding Packaging}" Width="150"/>
                                <DataGridTextColumn Header="Đơn vị" Binding="{Binding UnitOfMeasurement}" Width="100"/>
                                <DataGridTextColumn Header="Giá" Binding="{Binding Price, StringFormat={}{0:N0} VNĐ}" Width="120"/>
                                <DataGridTemplateColumn Header="Thao tác" Width="180">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <Button Content="Sửa" 
                                                       Command="{Binding DataContext.ProductViewModel.EditProductCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                       CommandParameter="{Binding}"
                                                       Style="{StaticResource MaterialDesignFlatButton}"
                                                       Margin="0,0,5,0"/>
                                                <Button Content="Xóa" 
                                                       Command="{Binding DataContext.ProductViewModel.DeleteProductCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                       CommandParameter="{Binding}"
                                                       Style="{StaticResource MaterialDesignFlatButton}"
                                                       Foreground="#D32F2F"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </materialDesign:Card>

                <!-- Edit Form -->
                <materialDesign:Card Grid.Row="2" Margin="0,10,0,0" 
                                    Visibility="{Binding ProductViewModel.IsEditMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <StackPanel Margin="20">
                        <TextBlock Text="{Binding ProductViewModel.FormTitle}" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBox Grid.Row="0" Grid.Column="0"
                                    materialDesign:HintAssist.Hint="Tên sản phẩm"
                                    Text="{Binding ProductViewModel.ProductName, UpdateSourceTrigger=PropertyChanged}"
                                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                    Margin="0,0,0,10"/>

                            <TextBox Grid.Row="0" Grid.Column="2"
                                    materialDesign:HintAssist.Hint="Quy cách đóng gói"
                                    Text="{Binding ProductViewModel.Packaging, UpdateSourceTrigger=PropertyChanged}"
                                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                    Margin="0,0,0,10"/>

                            <TextBox Grid.Row="1" Grid.Column="0"
                                    materialDesign:HintAssist.Hint="Đơn vị tính"
                                    Text="{Binding ProductViewModel.UnitOfMeasurement, UpdateSourceTrigger=PropertyChanged}"
                                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                    Margin="0,0,0,10"/>

                            <TextBox Grid.Row="1" Grid.Column="2"
                                    materialDesign:HintAssist.Hint="Giá bán (VNĐ)"
                                    Text="{Binding ProductViewModel.Price, UpdateSourceTrigger=PropertyChanged}"
                                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                    Margin="0,0,0,10"/>

                            <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" 
                                       Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                                <Button Content="LƯU" 
                                       Command="{Binding ProductViewModel.SaveProductCommand}"
                                       Style="{StaticResource MaterialDesignRaisedButton}"
                                       Margin="0,0,10,0"/>
                                <Button Content="HỦY" 
                                       Command="{Binding ProductViewModel.CancelEditCommand}"
                                       Style="{StaticResource MaterialDesignOutlinedButton}"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </materialDesign:Card>
            </Grid>
        </DataTemplate>

        <!-- Inventory View -->
        <DataTemplate x:Key="InventoryView">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <materialDesign:Card Grid.Row="0" Margin="0,0,0,10">
                    <StackPanel Margin="20">
                        <TextBlock Text="QUẢN LÝ TỒN KHO" FontSize="24" FontWeight="Bold"/>
                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                            <TextBlock Text="Ngưỡng cảnh báo:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <TextBox Width="80" 
                                    Text="{Binding InventoryViewModel.AlertThreshold, UpdateSourceTrigger=PropertyChanged}"
                                    Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                            <Button Content="Kiểm tra hàng sắp hết" 
                                   Command="{Binding InventoryViewModel.CheckLowStockCommand}"
                                   Style="{StaticResource MaterialDesignFlatButton}"
                                   Margin="20,0,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </materialDesign:Card>

                <materialDesign:Card Grid.Row="1">
                    <DataGrid ItemsSource="{Binding InventoryViewModel.InventoryItems}"
                             AutoGenerateColumns="False"
                             CanUserAddRows="False"
                             Margin="20">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Mã SP" Binding="{Binding ProductId}" Width="80"/>
                            <DataGridTextColumn Header="Tên sản phẩm" Binding="{Binding ProductName}" Width="*"/>
                            <DataGridTextColumn Header="Quy cách" Binding="{Binding Packaging}" Width="150"/>
                            <DataGridTextColumn Header="Đơn vị" Binding="{Binding UnitOfMeasurement}" Width="100"/>
                            <DataGridTextColumn Header="Số lượng tồn" Binding="{Binding StockQuantity}" Width="120"/>
                            <DataGridTemplateColumn Header="Trạng thái" Width="150">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border CornerRadius="10" Padding="8,3">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Background" Value="#4CAF50"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Status}" Value="Cảnh báo">
                                                            <Setter Property="Background" Value="#F44336"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <TextBlock Text="{Binding Status}" Foreground="White" 
                                                      HorizontalAlignment="Center" FontWeight="Bold"/>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Header="Cập nhật lúc" Binding="{Binding LastUpdated, StringFormat=dd/MM/yyyy HH:mm}" Width="150"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </materialDesign:Card>
            </Grid>
        </DataTemplate>

        <!-- Inbound View -->
        <DataTemplate x:Key="InboundView">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <materialDesign:Card Grid.Row="0" Margin="0,0,0,10">
                    <StackPanel Margin="20">
                        <TextBlock Text="NHẬP HÀNG" FontSize="24" FontWeight="Bold"/>
                        <TextBlock Text="Ghi nhận hàng hóa nhập kho" FontSize="14" Opacity="0.7" Margin="0,5,0,0"/>
                    </StackPanel>
                </materialDesign:Card>

                <materialDesign:Card Grid.Row="1" Margin="0,0,0,10">
                    <Grid Margin="20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBox Grid.Column="0"
                                materialDesign:HintAssist.Hint="Tên sản phẩm (gõ để tìm)"
                                Text="{Binding InboundViewModel.ProductSearchText, UpdateSourceTrigger=PropertyChanged}"
                                Style="{StaticResource MaterialDesignOutlinedTextBox}">
                            <TextBox.ToolTip>
                                <ToolTip>
                                    <StackPanel>
                                        <TextBlock Text="Danh sách sản phẩm:" FontWeight="Bold" Margin="0,0,0,5"/>
                                        <ItemsControl ItemsSource="{Binding InboundViewModel.Products}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding ProductName}" Margin="0,2"/>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>
                                </ToolTip>
                            </TextBox.ToolTip>
                        </TextBox>

                        <TextBox Grid.Column="2"
                                materialDesign:HintAssist.Hint="Số lượng"
                                Text="{Binding InboundViewModel.Quantity, UpdateSourceTrigger=PropertyChanged}"
                                Style="{StaticResource MaterialDesignOutlinedTextBox}"/>

                        <DatePicker Grid.Column="4"
                                   materialDesign:HintAssist.Hint="Ngày nhập"
                                   SelectedDate="{Binding InboundViewModel.InboundDate}"
                                   Style="{StaticResource MaterialDesignOutlinedDatePicker}"/>

                        <Button Grid.Column="6"
                               Content="NHẬP HÀNG"
                               Command="{Binding InboundViewModel.AddInboundCommand}"
                               Style="{StaticResource MaterialDesignRaisedButton}"
                               Height="56"/>
                    </Grid>
                </materialDesign:Card>

                <materialDesign:Card Grid.Row="2">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="LỊCH SỬ NHẬP HÀNG" FontSize="18" FontWeight="Bold" 
                                  Margin="20,20,20,10"/>

                        <DataGrid Grid.Row="1" 
                                 ItemsSource="{Binding InboundViewModel.RecentInbounds}"
                                 AutoGenerateColumns="False"
                                 CanUserAddRows="False"
                                 Margin="20,0,20,20">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Mã phiếu" Binding="{Binding LogId}" Width="100"/>
                                <DataGridTextColumn Header="Sản phẩm" Binding="{Binding Product.ProductName}" Width="*"/>
                                <DataGridTextColumn Header="Số lượng" Binding="{Binding Quantity}" Width="100"/>
                                <DataGridTextColumn Header="Ngày nhập" Binding="{Binding Date, StringFormat=dd/MM/yyyy}" Width="150"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </materialDesign:Card>
            </Grid>
        </DataTemplate>

        <!-- Outbound View -->
        <DataTemplate x:Key="OutboundView">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <materialDesign:Card Grid.Row="0" Margin="0,0,0,10">
                    <StackPanel Margin="20">
                        <TextBlock Text="XUẤT HÀNG" FontSize="24" FontWeight="Bold"/>
                        <TextBlock Text="Ghi nhận hàng hóa xuất kho" FontSize="14" Opacity="0.7" Margin="0,5,0,0"/>
                    </StackPanel>
                </materialDesign:Card>

                <materialDesign:Card Grid.Row="1" Margin="0,0,0,10">
                    <StackPanel>
                        <Grid Margin="20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBox Grid.Column="0"
                                    materialDesign:HintAssist.Hint="Tên sản phẩm (gõ để tìm)"
                                    Text="{Binding OutboundViewModel.ProductSearchText, UpdateSourceTrigger=PropertyChanged}"
                                    Style="{StaticResource MaterialDesignOutlinedTextBox}">
                                <TextBox.ToolTip>
                                    <ToolTip>
                                        <StackPanel>
                                            <TextBlock Text="Danh sách sản phẩm:" FontWeight="Bold" Margin="0,0,0,5"/>
                                            <ItemsControl ItemsSource="{Binding OutboundViewModel.Products}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Text="{Binding ProductName}" Margin="0,2"/>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </StackPanel>
                                    </ToolTip>
                                </TextBox.ToolTip>
                            </TextBox>

                            <TextBox Grid.Column="2"
                                    materialDesign:HintAssist.Hint="Số lượng"
                                    Text="{Binding OutboundViewModel.Quantity, UpdateSourceTrigger=PropertyChanged}"
                                    Style="{StaticResource MaterialDesignOutlinedTextBox}"/>

                            <DatePicker Grid.Column="4"
                                       materialDesign:HintAssist.Hint="Ngày xuất"
                                       SelectedDate="{Binding OutboundViewModel.OutboundDate}"
                                       Style="{StaticResource MaterialDesignOutlinedDatePicker}"/>

                            <Button Grid.Column="6"
                                   Content="XUẤT HÀNG"
                                   Command="{Binding OutboundViewModel.AddOutboundCommand}"
                                   Style="{StaticResource MaterialDesignRaisedButton}"
                                   Height="56"/>
                        </Grid>
                        
                        <TextBlock Text="{Binding OutboundViewModel.AvailableStockText}" 
                                  Margin="20,0,20,20"
                                  FontSize="14"
                                  Foreground="{DynamicResource SecondaryHueMidBrush}"/>
                    </StackPanel>
                </materialDesign:Card>

                <materialDesign:Card Grid.Row="2">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="LỊCH SỬ XUẤT HÀNG" FontSize="18" FontWeight="Bold" 
                                  Margin="20,20,20,10"/>

                        <DataGrid Grid.Row="1" 
                                 ItemsSource="{Binding OutboundViewModel.RecentOutbounds}"
                                 AutoGenerateColumns="False"
                                 CanUserAddRows="False"
                                 Margin="20,0,20,20">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Mã phiếu" Binding="{Binding LogId}" Width="100"/>
                                <DataGridTextColumn Header="Sản phẩm" Binding="{Binding Product.ProductName}" Width="*"/>
                                <DataGridTextColumn Header="Số lượng" Binding="{Binding Quantity}" Width="100"/>
                                <DataGridTextColumn Header="Ngày xuất" Binding="{Binding Date, StringFormat=dd/MM/yyyy}" Width="150"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </materialDesign:Card>
            </Grid>
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <materialDesign:ColorZone Mode="PrimaryMid" Grid.Column="0">
            <StackPanel>
                <TextBlock Text="QUẢN LÝ HÀNG HÓA" FontSize="16" FontWeight="Bold" 
                          Foreground="White" Margin="20" HorizontalAlignment="Center"/>
                
                <Button Content="Tổng quan" Command="{Binding NavigateToDashboardCommand}" 
                        Height="50" Margin="10" Foreground="White"
                        HorizontalContentAlignment="Left" Padding="20,0,0,0">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignFlatButton}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding CurrentView}" Value="Dashboard">
                                    <Setter Property="Background" Value="#1976D2"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button Content="Quản lý hàng hóa" Command="{Binding NavigateToProductsCommand}" 
                        Height="50" Margin="10" Foreground="White"
                        HorizontalContentAlignment="Left" Padding="20,0,0,0">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignFlatButton}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding CurrentView}" Value="Products">
                                    <Setter Property="Background" Value="#1976D2"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button Content="Tồn kho" Command="{Binding NavigateToInventoryCommand}" 
                        Height="50" Margin="10" Foreground="White"
                        HorizontalContentAlignment="Left" Padding="20,0,0,0">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignFlatButton}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding CurrentView}" Value="Inventory">
                                    <Setter Property="Background" Value="#1976D2"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button Content="Nhập hàng" Command="{Binding NavigateToInboundCommand}" 
                        Height="50" Margin="10" Foreground="White"
                        HorizontalContentAlignment="Left" Padding="20,0,0,0">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignFlatButton}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding CurrentView}" Value="Inbound">
                                    <Setter Property="Background" Value="#1976D2"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button Content="Xuất hàng" Command="{Binding NavigateToOutboundCommand}" 
                        Height="50" Margin="10" Foreground="White"
                        HorizontalContentAlignment="Left" Padding="20,0,0,0">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignFlatButton}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding CurrentView}" Value="Outbound">
                                    <Setter Property="Background" Value="#1976D2"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Separator Margin="10,20" Background="White" Opacity="0.3"/>

                <Button Content="Đăng xuất" Command="{Binding LogoutCommand}" 
                        Style="{StaticResource MaterialDesignFlatButton}" 
                        Height="50" Margin="10" 
                        Background="#D32F2F" Foreground="White"
                        HorizontalContentAlignment="Left" Padding="20,0,0,0"/>
            </StackPanel>
        </materialDesign:ColorZone>

        <!-- Content Area -->
        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
            <ContentControl Margin="20">
                <ContentControl.Style>
                    <Style TargetType="ContentControl">
                        <Setter Property="ContentTemplate" Value="{StaticResource DashboardView}"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding CurrentView}" Value="Products">
                                <Setter Property="ContentTemplate" Value="{StaticResource ProductsView}"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding CurrentView}" Value="Inventory">
                                <Setter Property="ContentTemplate" Value="{StaticResource InventoryView}"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding CurrentView}" Value="Inbound">
                                <Setter Property="ContentTemplate" Value="{StaticResource InboundView}"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding CurrentView}" Value="Outbound">
                                <Setter Property="ContentTemplate" Value="{StaticResource OutboundView}"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ContentControl.Style>
            </ContentControl>
        </ScrollViewer>
    </Grid>
</Window>
