<UserControl x:Class="GoodManagement.Views.ReportsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             Background="Transparent">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Card -->
        <materialDesign:Card Grid.Row="0" Margin="0,0,0,20" 
                            materialDesign:ElevationAssist.Elevation="Dp2">
            <Grid Margin="25,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <materialDesign:PackIcon Kind="ChartBox" 
                                        Width="40" Height="40"
                                        VerticalAlignment="Center"
                                        Foreground="#7B1FA2"/>
                <StackPanel Grid.Column="1" Margin="15,0,0,0">
                    <TextBlock Text="BÁO CÁO &amp; THỐNG KÊ" 
                              FontSize="24" 
                              FontWeight="Bold"/>
                    <TextBlock Text="Phân tích dữ liệu nhập xuất và tồn kho" 
                              FontSize="14" 
                              Opacity="0.7" 
                              Margin="0,5,0,0"/>
                </StackPanel>
            </Grid>
        </materialDesign:Card>

        <!-- Filter Section -->
        <materialDesign:Card Grid.Row="1" Margin="0,0,0,20" 
                            materialDesign:ElevationAssist.Elevation="Dp2">
            <Grid Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                          Text="Lọc theo:" 
                          FontSize="14"
                          FontWeight="SemiBold"
                          VerticalAlignment="Center"
                          Margin="0,0,15,0"/>

                <!-- Start Date -->
                <DatePicker Grid.Column="1"
                           SelectedDate="{Binding StartDate}"
                           materialDesign:HintAssist.Hint="Từ ngày"
                           Style="{StaticResource MaterialDesignOutlinedDatePicker}"
                           FontSize="14"/>

                <!-- End Date -->
                <DatePicker Grid.Column="3"
                           SelectedDate="{Binding EndDate}"
                           materialDesign:HintAssist.Hint="Đến ngày"
                           Style="{StaticResource MaterialDesignOutlinedDatePicker}"
                           FontSize="14"/>

                <!-- Filter Button -->
                <Button Grid.Column="5"
                       Command="{Binding GenerateReportCommand}"
                       Style="{StaticResource MaterialDesignRaisedButton}"
                       Height="56"
                       Padding="25,0"
                       Background="#7B1FA2"
                       BorderBrush="#7B1FA2">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="FileChart" 
                                                Width="22" Height="22"
                                                VerticalAlignment="Center"
                                                Margin="0,0,8,0"/>
                        <TextBlock Text="TẠO BÁO CÁO" 
                                  VerticalAlignment="Center"
                                  FontWeight="SemiBold"/>
                    </StackPanel>
                </Button>
            </Grid>
        </materialDesign:Card>

        <!-- Report Content -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="15"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="15"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Inbound Report -->
            <materialDesign:Card Grid.Row="0" Grid.Column="0" 
                                materialDesign:ElevationAssist.Elevation="Dp2">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" 
                           Background="#E8F5E9"
                           Padding="20,15">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="TruckDelivery" 
                                                    Width="24" Height="24"
                                                    VerticalAlignment="Center"
                                                    Foreground="#2E7D32"
                                                    Margin="0,0,10,0"/>
                            <TextBlock Text="BÁO CÁO NHẬP HÀNG" 
                                      FontSize="16" 
                                      FontWeight="SemiBold"
                                      VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <DataGrid Grid.Row="1"
                             ItemsSource="{Binding InboundReport}"
                             AutoGenerateColumns="False"
                             CanUserAddRows="False"
                             IsReadOnly="True"
                             HeadersVisibility="All"
                             GridLinesVisibility="Horizontal"
                             BorderThickness="0">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Sản phẩm" 
                                               Binding="{Binding ProductName}" 
                                               Width="*"/>
                            <DataGridTextColumn Header="Số lượng" 
                                               Binding="{Binding TotalQuantity}" 
                                               Width="100"/>
                            <DataGridTextColumn Header="Số lần nhập" 
                                               Binding="{Binding TransactionCount}" 
                                               Width="110"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <Border Grid.Row="2" 
                           Background="#E8F5E9"
                           Padding="20,10"
                           BorderBrush="{DynamicResource MaterialDesignDivider}"
                           BorderThickness="0,1,0,0">
                        <TextBlock FontSize="14" FontWeight="SemiBold">
                            <Run Text="Tổng nhập:"/>
                            <Run Text="{Binding TotalInboundQuantity}" 
                                 Foreground="#2E7D32"/>
                        </TextBlock>
                    </Border>
                </Grid>
            </materialDesign:Card>

            <!-- Outbound Report -->
            <materialDesign:Card Grid.Row="0" Grid.Column="2" 
                                materialDesign:ElevationAssist.Elevation="Dp2">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" 
                           Background="#FFEBEE"
                           Padding="20,15">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="TruckFast" 
                                                    Width="24" Height="24"
                                                    VerticalAlignment="Center"
                                                    Foreground="#D32F2F"
                                                    Margin="0,0,10,0"/>
                            <TextBlock Text="BÁO CÁO XUẤT HÀNG" 
                                      FontSize="16" 
                                      FontWeight="SemiBold"
                                      VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <DataGrid Grid.Row="1"
                             ItemsSource="{Binding OutboundReport}"
                             AutoGenerateColumns="False"
                             CanUserAddRows="False"
                             IsReadOnly="True"
                             HeadersVisibility="All"
                             GridLinesVisibility="Horizontal"
                             BorderThickness="0">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Sản phẩm" 
                                               Binding="{Binding ProductName}" 
                                               Width="*"/>
                            <DataGridTextColumn Header="Số lượng" 
                                               Binding="{Binding TotalQuantity}" 
                                               Width="100"/>
                            <DataGridTextColumn Header="Số lần xuất" 
                                               Binding="{Binding TransactionCount}" 
                                               Width="110"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <Border Grid.Row="2" 
                           Background="#FFEBEE"
                           Padding="20,10"
                           BorderBrush="{DynamicResource MaterialDesignDivider}"
                           BorderThickness="0,1,0,0">
                        <TextBlock FontSize="14" FontWeight="SemiBold">
                            <Run Text="Tổng xuất:"/>
                            <Run Text="{Binding TotalOutboundQuantity}" 
                                 Foreground="#D32F2F"/>
                        </TextBlock>
                    </Border>
                </Grid>
            </materialDesign:Card>

            <!-- Top Products -->
            <materialDesign:Card Grid.Row="2" Grid.Column="0" 
                                materialDesign:ElevationAssist.Elevation="Dp2">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" 
                           Background="#E3F2FD"
                           Padding="20,15">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="TrendingUp" 
                                                    Width="24" Height="24"
                                                    VerticalAlignment="Center"
                                                    Foreground="#1976D2"
                                                    Margin="0,0,10,0"/>
                            <TextBlock Text="TOP SẢN PHẨM BÁN CHẠY" 
                                      FontSize="16" 
                                      FontWeight="SemiBold"
                                      VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <ListView Grid.Row="1"
                             ItemsSource="{Binding TopProducts}"
                             BorderThickness="0">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="{DynamicResource MaterialDesignDivider}"
                                       BorderThickness="0,0,0,1"
                                       Padding="15,12">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0"
                                                  Text="{Binding Rank}"
                                                  FontSize="18"
                                                  FontWeight="Bold"
                                                  Foreground="#1976D2"
                                                  Width="30"
                                                  VerticalAlignment="Center"/>

                                        <TextBlock Grid.Column="1"
                                                  Text="{Binding ProductName}" 
                                                  FontWeight="SemiBold"
                                                  FontSize="14"
                                                  VerticalAlignment="Center"
                                                  Margin="10,0"/>

                                        <TextBlock Grid.Column="2"
                                                  FontSize="14" 
                                                  FontWeight="Bold"
                                                  Foreground="#1976D2"
                                                  VerticalAlignment="Center">
                                            <Run Text="{Binding TotalSold}"/>
                                            <Run Text="đã bán" FontWeight="Normal" FontSize="12"/>
                                        </TextBlock>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </materialDesign:Card>

            <!-- Summary Card -->
            <materialDesign:Card Grid.Row="2" Grid.Column="2" 
                                materialDesign:ElevationAssist.Elevation="Dp2">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" 
                           Background="#F3E5F5"
                           Padding="20,15">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="ChartLineVariant" 
                                                    Width="24" Height="24"
                                                    VerticalAlignment="Center"
                                                    Foreground="#7B1FA2"
                                                    Margin="0,0,10,0"/>
                            <TextBlock Text="TỔNG QUAN" 
                                      FontSize="16" 
                                      FontWeight="SemiBold"
                                      VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <StackPanel Grid.Row="1" Margin="25,20">
                        <!-- Total Transactions -->
                        <Border BorderBrush="{DynamicResource MaterialDesignDivider}"
                               BorderThickness="0,0,0,1"
                               Padding="0,15">
                            <Grid>
                                <TextBlock Text="Tổng giao dịch" 
                                          FontSize="14"
                                          Opacity="0.7"/>
                                <TextBlock Text="{Binding TotalTransactions}" 
                                          FontSize="20"
                                          FontWeight="Bold"
                                          HorizontalAlignment="Right"
                                          Foreground="#7B1FA2"/>
                            </Grid>
                        </Border>

                        <!-- Net Change -->
                        <Border BorderBrush="{DynamicResource MaterialDesignDivider}"
                               BorderThickness="0,0,0,1"
                               Padding="0,15">
                            <Grid>
                                <TextBlock Text="Chênh lệch (Nhập - Xuất)" 
                                          FontSize="14"
                                          Opacity="0.7"/>
                                <TextBlock Text="{Binding NetChange}" 
                                          FontSize="20"
                                          FontWeight="Bold"
                                          HorizontalAlignment="Right">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="#2E7D32"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsNetChangeNegative}" Value="True">
                                                    <Setter Property="Foreground" Value="#D32F2F"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>
                        </Border>

                        <!-- Period -->
                        <Border Padding="0,15">
                            <Grid>
                                <TextBlock Text="Khoảng thời gian" 
                                          FontSize="14"
                                          Opacity="0.7"/>
                                <TextBlock FontSize="13"
                                          HorizontalAlignment="Right"
                                          TextWrapping="Wrap"
                                          TextAlignment="Right"
                                          MaxWidth="150">
                                    <Run Text="{Binding StartDate, StringFormat=dd/MM/yyyy}"/>
                                    <Run Text="-"/>
                                    <Run Text="{Binding EndDate, StringFormat=dd/MM/yyyy}"/>
                                </TextBlock>
                            </Grid>
                        </Border>

                        <!-- Export Button -->
                        <Button Command="{Binding ExportReportCommand}"
                               Style="{StaticResource MaterialDesignOutlinedButton}"
                               Height="45"
                               Margin="0,20,0,0">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="FileExport" 
                                                        Width="20" Height="20"
                                                        VerticalAlignment="Center"
                                                        Margin="0,0,8,0"/>
                                <TextBlock Text="Xuất báo cáo Excel" 
                                          VerticalAlignment="Center"
                                          FontWeight="SemiBold"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </materialDesign:Card>
        </Grid>
    </Grid>
</UserControl>
