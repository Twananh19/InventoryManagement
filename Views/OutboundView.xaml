<UserControl x:Class="GoodManagement.Views.OutboundView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             Background="Transparent">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Card -->
        <materialDesign:Card Grid.Row="0" Margin="0,0,0,20" 
                            materialDesign:ElevationAssist.Elevation="Dp2">
            <Grid Margin="25,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <materialDesign:PackIcon Kind="TruckFast" 
                                        Width="40" Height="40"
                                        VerticalAlignment="Center"
                                        Foreground="#D32F2F"/>
                <StackPanel Grid.Column="1" Margin="15,0,0,0">
                    <TextBlock Text="QUẢN LÝ XUẤT HÀNG" 
                              FontSize="24" 
                              FontWeight="Bold"/>
                    <TextBlock Text="Ghi nhận phiếu xuất hàng và kiểm tra tồn kho tự động" 
                              FontSize="14" 
                              Opacity="0.7" 
                              Margin="0,5,0,0"/>
                </StackPanel>
            </Grid>
        </materialDesign:Card>

        <!-- Add Outbound Form -->
        <materialDesign:Card Grid.Row="1" Margin="0,0,0,20" 
                            materialDesign:ElevationAssist.Elevation="Dp2">
            <StackPanel Margin="25,20">
                <TextBlock Text="THÊM PHIẾU XUẤT MỚI" 
                          FontSize="16" 
                          FontWeight="SemiBold"
                          Margin="0,0,0,20"/>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Product Selection -->
                    <ComboBox Grid.Column="0"
                             ItemsSource="{Binding Products}"
                             SelectedItem="{Binding SelectedProduct}"
                             DisplayMemberPath="ProductName"
                             materialDesign:HintAssist.Hint="Chọn sản phẩm"
                             Style="{StaticResource MaterialDesignOutlinedComboBox}"
                             FontSize="14">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <TextBlock Text="{Binding ProductName}" FontWeight="SemiBold"/>
                                    <TextBlock FontSize="12" Opacity="0.7">
                                        <Run Text="{Binding Packaging}"/>
                                        <Run Text=" - Tồn: "/>
                                        <Run Text="{Binding CurrentStock, FallbackValue=0}" FontWeight="Bold"/>
                                    </TextBlock>
                                </StackPanel>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <!-- Quantity -->
                    <TextBox Grid.Column="2"
                            Text="{Binding NewQuantity, UpdateSourceTrigger=PropertyChanged}"
                            materialDesign:HintAssist.Hint="Số lượng"
                            Style="{StaticResource MaterialDesignOutlinedTextBox}"
                            FontSize="14"/>

                    <!-- Customer -->
                    <TextBox Grid.Column="4"
                            Text="{Binding NewCustomer, UpdateSourceTrigger=PropertyChanged}"
                            materialDesign:HintAssist.Hint="Khách hàng"
                            Style="{StaticResource MaterialDesignOutlinedTextBox}"
                            FontSize="14"/>

                    <!-- Add Button -->
                    <Button Grid.Column="6"
                           Command="{Binding AddOutboundCommand}"
                           Style="{StaticResource MaterialDesignRaisedButton}"
                           Height="56"
                           Padding="25,0"
                           Background="#D32F2F"
                           BorderBrush="#D32F2F">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="TruckFast" 
                                                    Width="22" Height="22"
                                                    VerticalAlignment="Center"
                                                    Margin="0,0,8,0"/>
                            <TextBlock Text="XUẤT HÀNG" 
                                      VerticalAlignment="Center"
                                      FontWeight="SemiBold"/>
                        </StackPanel>
                    </Button>
                </Grid>
            </StackPanel>
        </materialDesign:Card>

        <!-- Outbound History -->
        <materialDesign:Card Grid.Row="2" materialDesign:ElevationAssist.Elevation="Dp2">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- History Header -->
                <Border Grid.Row="0" 
                       Background="#FFEBEE"
                       Padding="20,15">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="History" 
                                                Width="24" Height="24"
                                                VerticalAlignment="Center"
                                                Margin="0,0,10,0"
                                                Foreground="#D32F2F"/>
                        <TextBlock Text="LỊCH SỬ XUẤT HÀNG" 
                                  FontSize="16" 
                                  FontWeight="SemiBold"
                                  VerticalAlignment="Center"/>
                        <Button Command="{Binding LoadOutboundLogsCommand}"
                               Style="{StaticResource MaterialDesignFlatButton}"
                               ToolTip="Làm mới"
                               Margin="15,0,0,0"
                               Height="30" Width="30"
                               Padding="0">
                            <materialDesign:PackIcon Kind="Refresh" Width="20" Height="20"/>
                        </Button>
                    </StackPanel>
                </Border>

                <!-- History DataGrid -->
                <DataGrid Grid.Row="1"
                         ItemsSource="{Binding OutboundLogs}"
                         AutoGenerateColumns="False"
                         CanUserAddRows="False"
                         IsReadOnly="True"
                         SelectionMode="Single"
                         HeadersVisibility="All"
                         GridLinesVisibility="Horizontal"
                         BorderThickness="0">
                    
                    <DataGrid.Resources>
                        <Style TargetType="DataGridRow" BasedOn="{StaticResource MaterialDesignDataGridRow}">
                            <Setter Property="Height" Value="50"/>
                        </Style>
                    </DataGrid.Resources>

                    <DataGrid.Columns>
                        <!-- Log ID -->
                        <DataGridTextColumn Header="MÃ PHIẾU" 
                                           Binding="{Binding OutboundLogId}" 
                                           Width="90">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="Foreground" Value="#D32F2F"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- Product -->
                        <DataGridTextColumn Header="SẢN PHẨM" 
                                           Binding="{Binding Product.ProductName}" 
                                           Width="*">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- Quantity -->
                        <DataGridTextColumn Header="SỐ LƯỢNG" 
                                           Binding="{Binding Quantity}" 
                                           Width="120">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="FontSize" Value="15"/>
                                    <Setter Property="Foreground" Value="#D32F2F"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- Customer -->
                        <DataGridTextColumn Header="KHÁCH HÀNG" 
                                           Binding="{Binding Customer}" 
                                           Width="200">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- Date -->
                        <DataGridTextColumn Header="NGÀY XUẤT" 
                                           Binding="{Binding Date, StringFormat=dd/MM/yyyy HH:mm}" 
                                           Width="160">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- Created By -->
                        <DataGridTextColumn Header="NGƯỜI XUẤT" 
                                           Binding="{Binding CreatedBy}" 
                                           Width="130">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="Opacity" Value="0.7"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Footer -->
                <Border Grid.Row="2" 
                       Background="{DynamicResource MaterialDesignPaper}"
                       BorderBrush="{DynamicResource MaterialDesignDivider}"
                       BorderThickness="0,1,0,0"
                       Padding="20,10">
                    <TextBlock FontSize="13" Opacity="0.7">
                        <Run Text="Tổng số phiếu xuất: "/>
                        <Run Text="{Binding OutboundLogs.Count, Mode=OneWay}" 
                             FontWeight="Bold"/>
                    </TextBlock>
                </Border>
            </Grid>
        </materialDesign:Card>
    </Grid>
</UserControl>
